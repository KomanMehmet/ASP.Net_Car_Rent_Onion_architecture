@model List<ResultTestimonialDto>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/AdminLayout/Index.cshtml";
    int count = 0;
}

<div class="page-content">
    <div class="container-fluid">
        <div class="row">
            <div class="col-xl-12">
                <div class="card">
                    <div class="card-body">
                        <h4 class="card-title">Referans Bilgileri Alanı</h4>
                        <p class="card-subtitle mb-4">
                            Referanslar bilgilerinin olduğu alandır. Aşağıdaki Panelden Referans Bilgilerini Ekleyebilir, Silebilir ve Güncelleyebilirsiniz.
                        </p>
                        <div class="table-responsive">
                            <table class="table mb-0">
                                <thead>
                                    <tr>
                                        <th>#</th>
                                        <th>Fotoğraf</th>
                                        <th>Adı Soyadı</th>
                                        <th>Meslek</th>
                                        <th>Yorum</th>
                                        <th>Sil</th>
                                        <th>Güncelle</th>
                                    </tr>
                                </thead>
                                <tbody>

                                    @foreach (var item in Model)
                                    {
                                        count++;
                                        <tr>
                                            <td>@count</td>
                                            <td><img src="@item.imageUrl" width="50px" height="50px"/></td>
                                            
                                            <td>@item.name</td>
                                            <td>@item.title</td>
                                            <td>@item.comment</td>
                                            
                                            <td><a href="/Admin/AdminTestimonial/RemoveTestimonial/@item.testimonialID" class="btn btn-outline-danger">Sil</a></td>
                                            <td><a href="/Admin/AdminTestimonial/UpdateTestimonial/@item.testimonialID" class="btn btn-outline-success">Güncelle</a></td>

                                        </tr>
                                    }

                                </tbody>
                            </table>
                            <a href="/Admin/AdminTestimonial/CreateTestimonial/" class="btn btn-outline-primary">Yeni Referans Bilgisi Girişi</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>

    </div>
</div>



